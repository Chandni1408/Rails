<%= form_for @artical do |f| %>
	<% if @artical.errors.any? %>
		<div id="error_explanation">
			<h2>
				<% pluralize(@artical.errors.count,"error") %>This article is not to save
			</h2>
			<ul>
				<% @artical.errors.full_messages.each do |list|%>
				<li><%= list%></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>
	<p>
		<%= f.submit %>
	</p>
	
<% end%>