<div class="container-fluid">
  <div class="row up">
    <div class="col-md-12">
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Home</a></li>
    
    <li class="breadcrumb-item active" aria-current="page">
        <%= link_to 'Department', department_index_path%>
    </li>
    <li class="breadcrumb-item active" aria-current="page">Add</li>
  </ol>
</nav>
</div></div>
  </div>
<div class="row up">
  <div class="col-md-12">
    <div class="container-fluid">
      <div class="alert alert-secondary" role="alert">
          Add New Department 
      </div>
    <%= form_for(@department, url: department_index_path, remote: true,html: { style: "display:inline;" }) do |s|%>
    <div class="modal-body">
        <ul class="errors"></ul>

            <div class="form-row">
                <div class="form-group mx-sm-3">
                <%= s.label :name %>
                <%= s.text_field :departmentName%><br>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group mx-sm-3">
                <%= s.label :Remark%>
                <%= s.text_field :remark%><br>
                </div>
            </div>

            <div>
                <%= s.hidden_field :login_master_id, :value => session[:emp_id] %><br>
            </div>
            <div class="modal-footer">
                <%= s.submit class: "btn btn-primary" %>
                <%= link_to "Cancel", "", class: "btn", data: {dismiss: "modal"} %>
            </div>
    </div>
   
  <%end%>
    </div>
  </div></div>
 
