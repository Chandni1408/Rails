<div class="container-fluid">
  <div class="row up">
    <div class="col-md-12">
<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="#">Home</a></li>
    
    <li class="breadcrumb-item active" aria-current="page">
        <%= link_to 'Employee',emp_master_index_path%>
    </li>
    <li class="breadcrumb-item active" aria-current="page">Add Oraganization Profile</li>
  </ol>
</nav>
</div></div>
  </div>
<div class="row up">
  <div class="col-md-12">
    <div class="container-fluid">
      <div class="alert alert-secondary" role="alert">
        Add Oraganization Profile 
      </div>
    <%= form_for(@organization, url: emp_oraganization_profile_index_path, remote: true,html: { style: "display:inline;" }) do |s|%>
    <div class="modal-body">
        <ul class="errors"></ul>
            <div class="form-row">
                <div class="form-group mx-sm-3">
                <%= s.label :Employee_Name%>
                <%= s.collection_select(:emp_master_id, EmpMaster.all, :id, :empName, {:include_blank => 'Employee'}) %>

                </div>
            </div>
            <div class="form-row">
                <div class="form-group mx-sm-3">
                <%= s.label :join_post_date %>
                <%= s.date_field :join_post_date%><br>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group mx-sm-3">
                <%= s.label :leave_post_date%>
                <%= s.date_field :leave_post_date%><br>
                </div>
            </div>
             <div class="form-row">
                <div class="form-group mx-sm-3">
                <%= s.label :salary %>
                <%= s.date_field :salary%><br>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group mx-sm-3">
                <%= s.label :department_Name%>
                <%= s.collection_select(:department_id, Department.all.where.not(active: 0), :id, :departmentName, {:include_blank => 'Department'}) %>

                </div>
            </div>
             <div class="form-row">
                <div class="form-group mx-sm-3" >
                <%= s.label :Designation_name %>
                <%= s.collection_select(:designation_id, Designation.all.where.not(active: 0), :id, :designationName, {:include_blank => 'Designation'}) %>
                </div>
            </div>

            <div>
                <%= s.hidden_field :login_master_id, :value => session[:emp_id] %><br>
            </div>
            <div class="modal-footer">
                <%= s.submit class: "btn btn-primary" %>
                <%= link_to "Cancel", "", class: "btn", data: {dismiss: "modal"} %>
            </div>
    </div>
   
  <%end%>
    
 
